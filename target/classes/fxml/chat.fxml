<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eduardowanderley.controller.ChatController"
      spacing="10" styleClass="chat-container">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="usernameField" promptText="Seu nome" HBox.hgrow="ALWAYS"/>
        <Button fx:id="connectButton" text="Conectar" onAction="#handleConnect"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="roomField" promptText="Nome da sala" HBox.hgrow="ALWAYS"/>
        <Button fx:id="joinRoomButton" text="Entrar na Sala" onAction="#handleJoinRoom"/>
    </HBox>

    <ListView fx:id="messageList" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="messageField" promptText="Digite sua mensagem" HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendButton" text="Enviar" onAction="#handleSendMessage"/>
        <Button fx:id="fileButton" text="Arquivo" onAction="#handleFileUpload"/>
    </HBox>
</VBox> 